/* 整体页面和滚动区域 */
.page-container {
  width: 100%;
  height: 100%;
}

/* 每个推荐用户的外层容器 */
.scroll-item-container {
  height: auto;
  padding: 10rpx 0 10rpx 0;
  border-top: 2rpx solid #f0f0f0; /* 分隔线 */
  border-bottom: 2rpx solid #f0f0f0; /* 分隔线 */
}

/* 创作者信息容器（头像、昵称、关注按钮） */
.creator-container {
  margin: 20rpx 0 20rpx 0;
  height: 130rpx;

  display: flex;
  flex-direction: row;
  align-items: center; /* 垂直居中对齐 */
  justify-content: space-between; /* 两端对齐，将按钮推到最右边 */
  
}

/* 头像 */
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%; /* 圆形头像 */
  margin-left: 10px;
  margin-right: 10px;
  flex-shrink: 0; /* 防止头像被压缩 */
}

/* 创作者文字信息容器 */
.creator-text-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  flex-grow: 1; /* 占据剩余空间 */
}

/* 昵称 */
.nickname {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

/* 其他信息（视频数、粉丝数） */
.other-info {
  line-height: 25rpx;

  font-size: 13px;
  color: #999;
}

/* 关注按钮 */
.followPage-follow-button {
  margin-right: 30rpx;

  height: 80rpx!important;
  width: 240rpx!important;
}

/* 横向滚动的视频列表容器 */
.video-list-container {
  /* scroll-view组件本身需要设置white-space: nowrap才能让内部元素横向排列 */
  white-space: nowrap;
}

/* 单个视频的容器 */
.video-container {
  display: inline-block; /* 使其可以横向排列 */
  width: 120px; /* 视频宽度 */
  margin-right: 8px; /* 视频间距 */
  vertical-align: top;
}

/* 视频单元 */
.video-unit {
  width: 100%;
  height: 100px; /* 视频高度，可根据需要调整 */
  border-radius: 8px; /* 圆角 */
  object-fit: cover; /* 保持视频比例，充满容器 */
}

/* 最后一个视频不需要右边距 */
.video-container:last-child {
  margin-right: 0;
}