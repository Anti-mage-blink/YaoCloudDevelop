.page-container {
  background-color: #f7f8fa;
  min-height: 100vh;
  font-size: 28rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  background-color: #fff;
  height: 100rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.avatar-section {
  height: auto;
  padding: 40rpx 0;
  justify-content: center;
  border-bottom: none;
  margin-bottom: 20rpx;
}

.avatar-button {
  width: 160rpx; height: 160rpx; padding: 0; border-radius: 50%;
  background-color: #eee;
}
.avatar-button::after { border: none; }
.avatar-image { width: 100%; height: 100%; border-radius: 50%; }

.label { color: #323233; width: 120rpx; }
.input-field { flex: 1; text-align: right; }

.radio-group-gender { display: flex; justify-content: flex-end; flex: 1; }
.radio-label { margin-left: 40rpx; }

.section-title { padding: 32rpx 32rpx 16rpx; color: #969799; }

.tag-section {
  background-color: #fff;
  padding: 20rpx 32rpx;
}

.tag-section radio-group,
.tag-section checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-label {
  background-color: #f2f3f5;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  color: #323233;
}

.tag-checked {
  background-color: #e0f0e9;
  color: #07c160;
}

.save-button-wrapper { margin: 60rpx 32rpx; }
.save-button {
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
}