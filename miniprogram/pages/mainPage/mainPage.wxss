.scroll-view {
  width: 100%;
}

.item-container {
  height: 40vh;
  width: 100%;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.video-container {
  height: 85%;
  width: 100%;
}

.bottom-bar {
  height: 15%;
  width: 100%;

  display: flex;
  flex-direction: row;
  align-items: center;

  padding-left: 0rpx;
  padding-right: 0rpx;
}

.video {
  height: 100%;
  width: 100%;
}

.avatar {
  margin-left: 20rpx;

  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  flex-shrink: 0;
}

.nickname {
  margin-left: 20rpx;
  flex-grow: 1;

  font-family: sans-serif;
}

.like-button {

  height: 70%;
  width: 100rpx!important;
}

.like-icon {
  height: 100%;
  width: 100%;
}

.collect-button {
  /* position: relative;
  left: 30rpx; */

  height: 70%;
  width: 100rpx!important;

  display: flex;
  flex-direction: center;
  align-items: center;
}

.collect-icon {
  height: 100%;
  width: 100%;
}

.share-button {
  margin-right: 30rpx;

  height: 70%;
  width: 200rpx !important;
  border-radius: 50rpx;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;

  padding-left: 0rpx;
  padding-right: 0rpx;
}

.weixin-icon {
  position: relative;
  left: 30rpx;

  width: 50rpx;

}

.share-font {
  position: relative;
  left: 40rpx;

  font-family: sans-serif;
}